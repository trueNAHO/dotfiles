[alias]
    # https://git-scm.com/book/en/v2/Git-Basics-Git-Aliases
    br = branch
    cm = commit
    co = checkout
    st = status --short

    cma = commit --all
    df = diff
    fixup = !git add --all && git commit --message \"fixup!: $(date)\"
    rcm = !git commit --amend --no-edit
    rcma = !git commit --all --amend --no-edit
    recommit = !git commit --amend --no-edit
    ri = rebase --interactive

    # https://book.git-scm.com/book/en/v2/Git-Tools-Submodules
    sdf = !git diff && git submodule foreach 'git diff'
    sdiff = !git diff && git submodule foreach 'git diff'
    spush = push --recurse-submodules=on-demand
    supdate = submodule update --remote --merge

    # https://stackoverflow.com/questions/1057564
    # "I don't do `git log` all the time, but when I do, just remember: (a dog)
    # `--all --decorate --oneline --graph`"
    adg = log --all --decorate --graph
    adgs = log --all --decorate --graph --stat
    adog = log --all --decorate --oneline --graph
    adogs = log --all --decorate --oneline --graph --stat

[commit]
    gpgSign = true

[merge]
    conflictstyle = diff3

[submodule]
	recurse = true

[tag]
	gpgsign = true

