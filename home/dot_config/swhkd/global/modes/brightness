super + b
    @enter brightness && \
    [ -z "$TMPDIR" ] && TMPDIR="/tmp" && \
    printf '%s\n' "brightness" >> "${TMPDIR}/swhkd_$(id --user)"

mode brightness
{escape,q}
    @escape{,} && \
    [ -z "$TMPDIR" ] && TMPDIR="/tmp" && \
    sed -i '$d' "${TMPDIR}/swhkd_$(id --user)"

# Decrease or increase the brightness level.
{j,k}
    brightnessctl set {2%-,+2%}
endmode
