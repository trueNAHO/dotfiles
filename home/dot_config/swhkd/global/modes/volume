super + v
    @enter volume && \
    [ -z "$TMPDIR" ] && TMPDIR="/tmp"; \
    printf '%s\n' "Super+v,Volume" >> "${TMPDIR}/swhkd_$(id --user)"

mode volume
{escape,q}
    @escape{,} && \
    [ -z "$TMPDIR" ] && TMPDIR="/tmp"; \
    mode_file="${TMPDIR}/swhkd_$(id --user)" && \
    printf '%s\n' "$(head -n -1 "$mode_file")" > "$mode_file"

# Decrease or increase the volume level.
{j,k}
    wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%{-,+}
endmode
