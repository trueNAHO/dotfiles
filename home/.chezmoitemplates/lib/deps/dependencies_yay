#!/usr/bin/env bash
# shellcheck disable=all

{{ template "lib/utilities/install_yay" }}
{{ template "lib/utilities/status" }}
{{ template "lib/utilities/yes_or_no" }}

# Download packages with yay. If yay is not installed, ask if it should be
# installed. Packages are provided as arguments.
dependencies_yay() {
  # If yay is not installed, install it or return.
  if ! command -v yay &>/dev/null; then
    status "yay is not installed"

    if yes_or_no "Install yay?"; then
      install_yay
    else
      status "skip yay packages: $*"
      return
    fi
  fi

  # Download provided packages.
  for package in "$@"; do
    status "yay -S --needed $package"
    if sudo -v; then
      yay -S --needed "$package" || true
    fi
  done
}
